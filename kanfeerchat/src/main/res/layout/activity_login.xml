<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg5"
    tools:context=".LoginActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/head_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/head_login_photo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/kf_name"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:background="@drawable/login_password_text"
                    android:drawableLeft="@mipmap/account_photo"
                    android:drawableRight="@mipmap/arrow_down"
                    android:inputType="number"
                    android:hint="账号" />

                <EditText
                    android:id="@+id/kf_password"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_password_text"
                    android:drawableLeft="@mipmap/password_photo"
                    android:inputType="numberPassword"
                    android:selectAllOnFocus="true"
                    android:hint="密码" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingHorizontal="25dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开启震动"
                    android:textSize="20dp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隐身登录"
                    android:textSize="20dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:paddingHorizontal="25dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="静音登陆"
                    android:textSize="20dp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接收群消息"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_marginHorizontal="5dp"
                android:id="@+id/ckbox_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住账号"
                android:textSize="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/text_color_selector"/>
            <CheckBox
                android:layout_marginHorizontal="5dp"
                android:id="@+id/ckbox_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textSize="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/text_color_selector"/>
            <TextView
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:id="@+id/edit_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码点此"
                android:background="@color/design_default_color_background"/>
        </LinearLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_marginTop="30dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="登陆锕"
            android:layout_gravity="center"
            android:background="@drawable/login_bg_selector"
            android:alpha="0.9"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/setting_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/settings" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>