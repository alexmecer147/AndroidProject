<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharedPreferencesMainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shared_preferences_key_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"/>

    <TextView
        android:id="@+id/shared_preferences_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/material_on_background_disabled"/>

    <Button
        android:id="@+id/shared_preferences_write_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写入"/>

    <Button
        android:id="@+id/shared_preferences_read_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读取"/>



</LinearLayout>